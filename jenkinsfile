pipeline {
    agent any
    
    environment {
        // Define MAVEN_HOME and adjust PATH
        MAVEN_HOME = tool name: 'Maven', type: 'maven'
        PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone') {
            steps {
                // Checkout your repository if needed
                git 'https://github.com/yunukolusuvarna/declarative.git'
            }
        }

        stage('Build') {
            steps {
                // Use 'sh' step to run Maven commands
                sh "${env.MAVEN_HOME}/bin/mvn clean package"
            }
        }

        stage('Test') {
            steps {
                sh "${env.MAVEN_HOME}/bin/mvn test"
            }
        }

        stage('Deploy') {
            steps {
                sh "${env.MAVEN_HOME}/bin/mvn deploy"
                // Add additional deployment steps if needed
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline execution failed :('
        }
    }
}
